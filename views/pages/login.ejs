<!doctype html>
<head>
<title>Login</title>
<link href="/css/style.css" rel="stylesheet" type="text/css">
</head>

<body>
    <form id="login" action="/login" method="post">
        <label for="voornaam">Voornaam:</label>
        <input 
            type="text" 
            id="voornaam" 
            name="voornaam"
            required><br><br>

        <label for="email">email:</label>
        <input 
            type="email" 
            id="email" 
            name="email" 
            required 
            autocomplete="email"><br><br>

        <label for="achternaam">wachtwoord:</label>
        <input 
            type="password" 
            id="wachtwoord" 
            name="password"
            required><br><br>

        <input type="submit" value="Inloggen">
    </form>
</body>